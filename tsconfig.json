{
    "compilerOptions": {
        "skipLibCheck": true,
        "strict": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "declaration": true,
        "composite": true,
        "jsx": "react-jsx",
        "types": [
            "./.typescript/declarations/css.module.d.ts"
        ],
        "paths": {
            "@components": [
                "./src/components"
            ],
            "@lib": [
                "./src/lib"
            ],
            "@types": [
                "./src/types"
            ],
            "index": [
                "./src/index.ts"
            ]
        }
    }
}